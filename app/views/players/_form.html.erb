<%= form_for @player, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :picture, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.file_field :picture, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :surname, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :surname, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :born, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_field :born, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :country, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.country_select :country, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :position, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.select :position, ['Goalkeeper', 'Left-Backward', 'Central-Backward', 'Right-Backward', 'Left-Midfielder', 'Central-Midfielder', 'Right-Midfielder', 'Striker'] %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  players_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
