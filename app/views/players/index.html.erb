<%- model_class = Player -%>
<%= link_to t('Add new player'),
            new_player_path,
            class: 'btn btn-warning' %>

<div class="dbtable">
  <table class="table table-hover table-bordered">
  <thead align="center">
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:surname) %></th>
      <th><%= model_class.human_attribute_name(:born) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%= model_class.human_attribute_name(:position) %></th>
      <th width="20%"></th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
          <td style="text-align: center; vertical-align: middle;"><%= player.name %></td>
          <td style="text-align: center; vertical-align: middle;"><%= player.surname %></td>
          <td style="text-align: center; vertical-align: middle;"><%= player.born %></td>
          <td style="text-align: center; vertical-align: middle;"><%= player.country_name %></td>
          <td style="text-align: center; vertical-align: middle;"><%= player.position %></td>
        <td style="text-align: center; vertical-align: middle;">
          <%= link_to 'Show', player_path(player), class: 'btn btn-info', title: "#{ t('.show', default: t('helpers.links.show')) }" %>
          <%= link_to 'Edit', edit_player_path(player), class: 'btn btn-info', title: "#{ t('.edit', default: t('helpers.links.edit')) }" %>
          <%= link_to 'Delete', player_path(player), class: 'btn btn-warning', method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" %>
        </td>
      </tr>
    <% end %>
  </tbody>
  </table>
  <div class="col-xs-2" align="center" style="
  width: 300px;
  height: 200px;
  z-index: 15;
  top: 10%;
  left: 40%;
  margin: auto;">
  <%= form_tag(players_path, method: :get) do %>
    <%= text_field_tag :term, "", :class => "form-control input-sm" %>
    <%= submit_tag("Search!", :class => "btn btn-standard", name: nil ) %>
  <% end %>
  </div>
</div>
